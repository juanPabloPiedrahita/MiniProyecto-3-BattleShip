<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.collections.FXCollections?>
<?import java.lang.Integer?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.miniproyecto3.GameController">
    <Label text="Configurar barco:" />
    <ComboBox fx:id="shipSizeSelector" promptText="TamaÃ±o del barco">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="2"/>
                <Integer fx:value="3"/>
                <Integer fx:value="4"/>
                <Integer fx:value="5"/>
            </FXCollections>
        </items>
    </ComboBox>
    <ToggleButton fx:id="orientationToggle" text="Horizontal" />
    <Button text="Listo" onAction="#handleFinishPlacement"/>

    <Button fx:id="monitorButton" text="Mostrar Tablero Enemigo" onAction="#toggleEnemyBoard"/>

    <!-- Tableros -->
    <GridPane fx:id="playerBoard" hgap="5" vgap="5" />
    <GridPane fx:id="enemyBoard" hgap="5" vgap="5" />
</VBox>
